<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Mini Whatsapp</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h2 style="color: white;">Chats</h2>
    <form action="/chats/new" method="GET">
        <button class="chatbtn">New Chat</button>
    </form>
    <% for(let chat of chats){ %>
        <div class="chats">
            <p>Sender:<i> <%= chat.from %></i></p>
            <div class="msg">
                <p><%= chat.msg %></p>
                <div class="btns">
                    <form method="GET" action="/chats/<%= chat._id %>/edit">
                        <button id="edit">Edit</button>
                    </form>
                    <form method="POST" action="/chats/<%= chat._id %>?_method=DELETE">
                        <button id="dlt" onclick="return confirm('Are you sure you want to delete this item?')">Delete</button>
                    </form>
                </div>

            </div>
            <p>Receiver:<i> <%= chat.to %></i></p>
            <p>Time: <%= chat.created_at.toString().split(" ")[4]%></p>
            <p>Date: <%= chat.created_at.toString().split(" ").slice(0,4).join(" ")%></p>
             <hr>
        </div>
        <br><br>
    <%}%>
</body>
</html>